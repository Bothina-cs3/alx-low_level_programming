CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): $(SRC)
	$(CC) -c $(SRC) -o $@ -I.

clean:
	$(RM) $(wildcard *~) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY: all clean oclean fclean re
